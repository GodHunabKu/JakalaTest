# ONE SHOP - Security Configuration

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(log|db|sqlite|sqlite3)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config and include files
<FilesMatch "^(config\.php|\.env\.example)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# Protect error logs
<FilesMatch "^error_log$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect paypal debug logs
<FilesMatch "paypal.*\.log$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to SQLite database files
<FilesMatch "\.db$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Security Headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"

    # Enable XSS Protection
    Header set X-XSS-Protection "1; mode=block"

    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Remove server signature
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# Disable PHP execution in upload directories
<Directory "images">
    php_flag engine off
</Directory>

# URL Rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /shop/

    # Force HTTPS (uncomment if you have SSL)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Block access to hidden files except .well-known
    RewriteCond %{REQUEST_URI} "!(^|/)\.well-known/([^./]+\.)*[^./]+$"
    RewriteCond %{SCRIPT_FILENAME} -d [OR]
    RewriteCond %{SCRIPT_FILENAME} -f
    RewriteRule "(^|/)\." - [F]

    # Skip rewrite for existing files and directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Main routing rules
    # Format: /page -> index.php?p=page
    # Format: /page/param -> index.php?p=page (param handled separately)

    # Items page with category: /items or /category/1
    RewriteRule ^items/?$ index.php?p=items&category=1 [L,QSA]
    RewriteRule ^category/([0-9]+)/?$ index.php?p=items&category=$1 [L,QSA]

    # Item detail page: /item/123
    RewriteRule ^item/([0-9]+)/?$ index.php?p=item&id=$1 [L,QSA]

    # Buy/coins pages
    RewriteRule ^buy/coins/?(.*)$ index.php?p=coins [L,QSA]
    RewriteRule ^buy/item/([0-9]+)/?$ index.php?p=buy&id=$1 [L,QSA]

    # Admin pages
    RewriteRule ^settings/?$ index.php?p=settings [L,QSA]
    RewriteRule ^admin/paypal/?$ index.php?p=paypal [L,QSA]
    RewriteRule ^categories/?$ index.php?p=categories [L,QSA]
    RewriteRule ^add/item/([0-9]+)/?$ index.php?p=add_items&category=$1 [L,QSA]
    RewriteRule ^add/bonus/item/([0-9]+)/?$ index.php?p=add_items_bonus&category=$1 [L,QSA]

    # Auth pages
    RewriteRule ^login/?$ index.php?p=login [L,QSA]
    RewriteRule ^logout/?$ index.php?p=logout [L,QSA]

    # Home page (default)
    RewriteRule ^$ index.php?p=home [L,QSA]
</IfModule>

# Limit file upload size (adjust as needed)
php_value upload_max_filesize 10M
php_value post_max_size 10M

# Set timezone
php_value date.timezone "Europe/Rome"

# Disable dangerous PHP functions
php_value disable_functions "exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source"
