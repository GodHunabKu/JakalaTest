# ONE SHOP - Security Configuration

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.env">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(log|db|sqlite|sqlite3)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config and include files
<FilesMatch "^(config\.php|\.env\.example)$">
    Order allow,deny
    Deny from all
    Satisfy All
</FilesMatch>

# Protect error logs
<FilesMatch "^error_log$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect paypal debug logs
<FilesMatch "paypal.*\.log$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to SQLite database files
<FilesMatch "\.db$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Security Headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"

    # Enable XSS Protection
    Header set X-XSS-Protection "1; mode=block"

    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Remove server signature
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# Disable PHP execution in upload directories
<Directory "images">
    php_flag engine off
</Directory>

# URL Rewriting (if needed)
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Force HTTPS (uncomment if you have SSL)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Block access to hidden files except .well-known
    RewriteCond %{REQUEST_URI} "!(^|/)\.well-known/([^./]+\.)*[^./]+$"
    RewriteCond %{SCRIPT_FILENAME} -d [OR]
    RewriteCond %{SCRIPT_FILENAME} -f
    RewriteRule "(^|/)\." - [F]
</IfModule>

# Limit file upload size (adjust as needed)
php_value upload_max_filesize 10M
php_value post_max_size 10M

# Set timezone
php_value date.timezone "Europe/Rome"

# Disable dangerous PHP functions
php_value disable_functions "exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source"
